<%= form_with(model: temp_commit_offer, local: true) do |form| %>
<% if temp_commit_offer.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(temp_commit_offer.errors.count, "error") %>
      prohibited this temp_commit_offer from being saved:</h2>

    <ul>
      <% temp_commit_offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= form.label :organization_id, class: 'label' %>
  <div class="select">
    <%= form.select :organization_id, options_for_select(Organization.all.map{ |org| [org.name, org.id]}, selected: @temp_commit_offer.organization_id), prompt: 'Select an Organization', include_blank: true %>
  </div>
</div>

<div class="field">
  <%= form.label :program_name, class: 'label' %>
  <div class="control">
    <%= form.text_field :program_name, class: 'input' %>
  </div>
</div>

<div class="field">
  <%= form.label :recruit_name, class: 'label' %>
  <%= form.text_field :recruit_name, class: 'input' %>
</div>

<div class="field">
  <%= form.label :position, class: 'label' %>
  <%= form.text_field :position, class: 'input' %>
</div>

<div class="field">
  <%= form.label :grad_year, class: 'label' %>
  <%= form.text_field :grad_year, class: 'input' %>
</div>

<div class="field">
  <%= form.label :high_school, class: 'label' %>
  <%= form.text_field :high_school, class: 'input' %>
</div>

<div class="field">
  <%= form.label :state, class: 'label' %>
  <%= form.text_field :state, class: 'input' %>
</div>

<div class="field">
  <%= form.label :twitter_handle, class: 'label' %>
  <%= form.text_field :twitter_handle, class: 'input' %>
</div>

<div class="field">
  <%= form.label :tweet_text, class: 'label' %>
  <%= form.text_area :tweet_text, class: 'textarea' %>
</div>

<div class="field">
  <%= form.label :tweet_permalink, class: 'label' %>
  <%= form.text_field :tweet_permalink, class: 'input' %>
</div>

<div class="field">
  <%= form.label :deleted, class: 'label' do %>
  Deleted
  <%= form.check_box :deleted %>
<% end %>
</div>

<div class="field">
  <%= form.label :grouping, class: 'label' %>
<div class="select">
  <%= form.select :grouping, options_for_select(CoEmailGrouping.all.map{ |conf| [conf.description, conf.description]}, selected: @temp_commit_offer.grouping), prompt: 'Select a grouping', include_blank: true %>
</div>
</div>

<div class="field">
<%= form.label :conference, class: 'label' %>
<%= form.text_field :conference, class: 'input', disabled: 'disabled' %>
</div>

<div class="field">
<%= form.label :verified_by, class: 'label' %>
<%= form.text_field :verified_by, class: 'input' %>
</div>

<div class="actions">
<%= form.submit class: 'button is-primary' %>
</div>
<% end %>
