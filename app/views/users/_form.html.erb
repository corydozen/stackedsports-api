<div class="request-access">

  <%= form_for :user, method: :post, url: users_path do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %>
        prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="group">
    <div class="field">
      <p class="control has-icons-left">
        <%= form.text_field :first_name, class: 'input is-large', placeholder: "First Name", required: true %>
        <span class="icon is-small is-left">
          <%= icon('fal', 'user', class: 'fa-lg', title: '') %>
        </span>
      </p>
    </div>

    <div class="field">
      <p class="control has-icons-left">
        <%= form.text_field :last_name, class: 'input is-large', placeholder: "Last Name", required: true %>
        <span class="icon is-small is-left">
          <%= icon('fal', 'user', class: 'fa-lg', title: '') %>
        </span>
      </p>
    </div>

  </div>

  <div class="group">

    <div class="field">
      <p class="control has-icons-left">
        <%= form.telephone_field :phone, class: 'input is-large', placeholder: "555-555-5555 (optional)" %>
        <span class="icon is-small is-left">
          <%= icon('fal', 'phone', class: 'fa-lg', title: '') %>
        </span>
      </p>
    </div>

    <div class="field">
      <p class="control has-icons-left">
        <%= form.email_field :email, class: 'input is-large', placeholder: "your@email.com", required: true %>
        <span class="icon is-small is-left">
          <%= icon('fal', 'envelope', class: 'fa-lg', title: '') %>
        </span>
      </p>
    </div>

    <div class="field">
      <p class="control has-icons-left">
        <%= form.text_field :organization, class: 'input is-large', placeholder: "School / University Name", required: true %>
        <span class="icon is-small is-left">
          <%= icon('fal', 'building', class: 'fa-lg', title: '') %>
        </span>
      </p>
    </div>
  </div>

  <div class="group">

    <div class="field">
      <p class="control has-icons-left">
        <%= form.password_field :password, class: 'input is-large', placeholder: "Password", required: true %>
        <span class="icon is-small is-left">
          <%= icon('fal', 'key', class: 'fa-lg', title: '') %>
        </span>
      </p>
    </div>

    <div class="field">
      <p class="control has-icons-left">
        <%= form.password_field :password_confirmation, class: 'input is-large', placeholder: "Password Confirmation", required: true %>
        <span class="icon is-small is-left">
          <%= icon('fal', 'key', class: 'fa-lg', title: '') %>
        </span>
      </p>
    </div>
  </div>

  <div class="submit-row request-button">
    <% if !user.is_admin? || user.id == current_user.id %>
      <div class="actions">
        <%= form.submit "REQUEST ACCESS", class: 'button is-rounded is-medium is-info require-access-button' %>
      </div>
    <% end %>
  </div>
  <div class="login-link">
    Already have account?
    <a href="/user_sessions/new">Login here</a>
  </div>
<% end %>
</div>
