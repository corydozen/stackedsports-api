@import "vars";
$positive: #63A61F;
$negative: #BC4749;
$neutral: #96989A;
$mixed: #616365;
@mixin progress_color($color) {
  progress {
    background: $color;
  }

  progress::-webkit-progress-bar {
    background: $color;
  }

  progress::-webkit-progress-value {
    background: $color;
  }

  progress::-moz-progress-bar {
    background: $color;
  }
}
@mixin partial_bottom_border($percent) {
  &:after {
    content: "";
    /* This is necessary for the pseudo element to work. */
    display: block;
    /* This will put the pseudo element on its own line. */
    margin: 0 auto;
    /* This will center the border. */
    width: $percent;
    /* Change this to whatever width you want. */
    padding-top: 20px;
    /* This creates some space between the element and the border. */
    border-bottom: 1px solid $grey-text;
    /* This creates the border. Replace black with whatever color you want. */
  }
}

.is-positive {
  color: $positive;
}

.is-negative {
  color: $negative;
}

.is-neutral {
  color: $neutral;
}

.is-mixed {
  color: $mixed;
}

.is-positive-progress {
  @include progress_color($positive);
}

.is-negative-progress {
  @include progress_color($negative);
}

.is-neutral-progress {
  @include progress_color($neutral);
}

.is-mixed-progress {
  @include progress_color($mixed);
}

